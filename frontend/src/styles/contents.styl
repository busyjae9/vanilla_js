@import "index"

on-color(color)
  border-color color
  color color

.contents
  display flex
  flex-direction column
  width 100%
  align-items center
  justify-content space-evenly
  gap 1em
  padding 2em
  box-sizing border-box


.content
  display flex
  flex-direction row
  align-items center
  justify-content space-between
  width 90%
  padding 1em 1em
  border-radius 1em
  box-shadow 0 0 .5em .2em $black30
  background-color $black100

  .done_text
    line-height 1.2em
    text-align justify
    word-break break-word
    color $grey100

    text-decoration line-through white

  &__checkbox
    &__empty
      border none
      color $white

      &:hover
        on-color($blue)

    &__done
      border none
      on-color($blue)

      &:hover
        on-color($white)


  &__title
    max-width 70%
    line-height 1.2em
    text-align justify
    word-break break-word
    color: $white

  &__archive
    &__date
      max-width 15%
      line-height 1.2em
      text-align justify
      word-break break-word
      color: $white

    &__title
      width 45%
      line-height 1.2em
      text-align justify
      word-break break-word
      color: $white

  &__buttons
    min-width 15%
    justify-content space-between
    display inherit
    flex-direction row


  &__button
    &__edit
      padding .2em .5em

    &__return
      padding .2em .5em

    &__archive
      padding .2em .5em

    &__delete
      padding .2em .5em
      on-color($red100)

      &:hover
        on-color($red)

