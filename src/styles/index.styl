$white = #f9fafb
$grey = #e7e5e4
$grey100 = #6b7280
$blue = #0891b2
$black = #171717
$black30 = rgba(255, 255, 255, 0.3)
$black100 = #18181b
$white60 = rgba(0, 0, 0, 0.6)
$grey = #27272a
$red = #b91c1c
$red10 = #ef4444
$red100 = #fca5a5
$red200 = #f87171
$green = #4ade80
$green100 = #22c55e

ok_cancel()
  &__button
    &__ok
      color $white
      border-color $green

      &:hover
        color $green100
        border-color $green100

    &__cancel
      color $white
      border-color $red200

      &:hover
        color $red10
        border-color $red10


html, body
  margin 0
  width 100%
  height 100%
  font-size 16px
  background-color $black
  color $white
  display flex
  justify-content center
  box-sizing border-box

  svg
    color $white

  span
    vertical-align middle

  button
    background-color transparent
    color $white
    border-width 0 0 4px
    border-color darkgray
    font-size 1em
    padding .2em .2em


  button:hover
    border-color $blue
    color $blue

  .ghost
    opacity 0

  .active
    opacity 1
    transition 0.3s

  .container
    flex 1
    max-width 800px
    padding 2em
    align-items center
    justify-content center



