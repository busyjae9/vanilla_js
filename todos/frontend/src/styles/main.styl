$white = #f9fafb
$grey = #e7e5e4
$grey100 = #6b7280
$blue = #0891b2
$black = #171717
$black30 = rgba(255, 255, 255, 0.3)
$black100 = #18181b
$white60 = rgba(0, 0, 0, 0.6)
$grey = #27272a
$red = #b91c1c
$red10 = #ef4444
$red100 = #fca5a5
$red200 = #f87171
$green = #4ade80
$green100 = #22c55e


ok_cancel()
  &__button
    &__ok
      color $white
      border-color $green

      &:hover
        color $green100
        border-color $green100

    &__cancel
      color $white
      border-color $red200

      &:hover
        color $red10
        border-color $red10

body::-webkit-scrollbar
  width .4em
  background $grey

  &-track
    background-color $black

  &-thumb
    background-color $grey

html, body
  margin 0
  width 100%
  height 100%
  background-color $black
  color $white
  display flex
  flex-direction column
  align-items center
  justify-content flex-start
  box-sizing border-box

  @media (min-width: 312px)
    font-size: 12px

  @media (min-width: 375px)
    font-size: 14px

  @media (min-width: 425px)
    font-size: 16px

  @media (min-width: 768px)
    font-size: 20px

  @media (min-width: 1440px)
    font-size: 24px

  svg
    color $white

  span
    vertical-align middle

  button
    background-color transparent
    color $white
    border-width 0 0 4px
    border-color darkgray
    font-size 1em
    padding .2em .2em

  input[type="submit"]
    background-color transparent
    border-width 0 0 4px

  button:hover
    border-color $blue
    color $blue

  .ghost
    opacity 0

  .active
    opacity 1
    transition 0.3s

  .container
    width 100%
    box-sizing border-box
    align-items center
    justify-content center

    @media (min-width: 312px)
      padding 1em 2em
      width 100%
      max-width 800px

    @media (min-width: 768px)
      width 100%
      max-width 1200px

    @media (min-width: 1440px)
      padding 1em 0
      max-width 1200px

  .whoami
    display flex
    box-sizing border-box
    width 100%
    background-color $grey100
    align-items center
    justify-content center
    padding 1em 3em

    &__buttons
      display flex
      align-items center
      gap 1em

      &__archive
        border none
        font-size 1.4em
        color $white
        border-color $white

        &:hover
          color $green
          border-color $green

      &__logout
        border none
        font-size 1.4em
        color $white
        border-color $white

        &:hover
          color $red
          border-color $red

    &__info
      display flex
      align-items center
      justify-content space-evenly

      &__icon
        font-size 1.6em

      &__name
        font-size 1.4em
        width: 5em
        box-sizing border-box
        padding 0 .4em
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis






