$white = #f9fafb
$grey = #e7e5e4
$grey100 = #6b7280
$blue = #0891b2
$black = #171717
$black30 = rgba(255, 255, 255, 0.3)
$black100 = #18181b
$white60 = rgba(0, 0, 0, 0.6)
$grey = #27272a
$red = #b91c1c
$red10 = #ef4444
$red100 = #fca5a5
$red200 = #f87171
$green = #4ade80
$green100 = #22c55e

$mobile = '(max-device-width 767px)';
$tablet = '(min-device-width: 768px)';
$desktop = '(min-device-width: 1366px)';

ok_cancel()
  &__button
    &__ok
      color $white
      border-color $green

      &:hover
        color $green100
        border-color $green100

    &__cancel
      color $white
      border-color $red200

      &:hover
        color $red10
        border-color $red10

font_size(size = 2.4)
  font-size size * 1 em

  @media $tablet
    font-size size * 0.8 em

  @media $desktop
    font-size size * 0.7 em


padding_flex(vertical = 0, horizontal = 0)
  padding vertical * 1em horizontal * 1em

  @media $tablet
    padding vertical * 0.8em horizontal * 0.8em

  @media $desktop
    padding vertical * 0.7em horizontal * 0.8em


body::-webkit-scrollbar
  width .4em
  background $grey

  &-track
    background-color $black

  &-thumb
    background-color $grey

html, body
  touch-action manipulation
  margin 0
  width 100%
  height 100%
  background-color $black
  color $white
  display flex
  flex-direction column
  align-items center
  justify-content flex-start
  box-sizing border-box

  @media (min-device-width: 312px)
    font-size: 22px

  @media (min-device-width: 375px)
    font-size: 20px

  @media (min-device-width: 425px)
    font-size: 18px

  @media (min-device-width: 768px)
    font-size: 16px

  svg
    color $white

  span
    vertical-align middle

  button
    background-color transparent
    color $white
    border-width 0 0 4px
    border-color darkgray
    font-size 1em
    padding 0

  input[type="submit"]
    background-color transparent
    border-width 0 0 4px

  button:hover
    border-color $blue
    color $blue

  .ghost
    opacity 0

  .active
    opacity 1
    transition 0.3s

  .container
    width 100%
    box-sizing border-box
    align-items center
    justify-content center

    padding_flex(1, 1)

    @media $tablet
      max-width 1200px

    @media $desktop
      max-width 1200px

  .whoami
    display flex
    box-sizing border-box
    width 100%
    background-color $grey100
    align-items center
    max-width 1200px
    justify-content space-between

    padding_flex(2, 2)

    &__buttons
      display flex
      align-items center
      justify-content flex-end
      gap 1em
      font_size(3)

      &__archive
        padding none
        border none
        color $white
        border-color $white

        &:hover
          color $green
          border-color $green

      &__logout
        padding none
        border none
        color $white
        border-color $white

        &:hover
          color $red
          border-color $red

    &__info
      display flex
      align-items center
      font_size(3)

      &__name
        box-sizing border-box
        padding 0 .4em
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis






