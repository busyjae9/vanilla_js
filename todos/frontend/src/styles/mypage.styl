.my_page
  width 100%
  box-sizing border-box
  display flex
  flex-direction column
  align-items center
  justify-content center
  color $white

  @media $tablet
    max-width 1200px

  @media $desktop
    max-width 1200px

  &__header
    width 100vw
    height 200px

    &__image
      width 100%
      height 100%
      object-fit cover

  &__follow
    margin-top 1em
    border none
    width 100%
    box-sizing border-box
    padding .6em 1em
    border-radius 1em
    box-shadow 0 0 .1em .1em $black30
    font-size 2em
    font-weight 600

    &[status="delete"]
      background-color $black

      &:hover
        color $white
        background-color $red


    &[status="post"]
      background-color $blue

      &:hover
        color $white
        background-color $green100

  &__info
    width 100%
    display flex
    flex-direction column
    gap 1em

    &__title
      width 100%
      font-size 3em
      font-weight bold
      padding .8em 0

    &__row
      gap .5em
      width 100%
      display flex
      background-color $grey
      flex-direction column
      box-sizing border-box
      padding 1em 1em
      border-radius 1em
      box-shadow 0 0 .1em .1em $black30

      &__title
        font-size 2em
        font-weight 600

      &__data
        font-size 1.4em

