.prompt
  position fixed
  display flex
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.6)
  color white
  z-index 1000
  align-items center
  justify-content center

  &__body
    display flex
    flex-direction: column;
    align-items center
    justify-content space-evenly
    background-color $grey
    box-shadow 0 0 .6em .4em $black30
    width 24em
    border-radius 2em
    padding_flex(1, 1)
    width_flex(90)

    &__title
      width 100%
      text-align center
      font_size(3)

    &__msg
      width 100%
      padding .2em 1em
      text-align center
      font_size(2.4)
      color $grey

    &__buttons
      font_size(2.4)
      width 100%
      display flex
      flex-direction row
      align-items center
      justify-content space-evenly

      ok_cancel()

    &__values
      width 100%
      display flex
      flex-direction column
      align-items center
      justify-content space-evenly
      padding 0.5em 1em
      min-height 6em

      &__row
        display flex
        flex-direction row
        align-items center
        justify-content space-between
        box-sizing border-box
        padding .5em 1em
        width 100%

        &__key
          text-align center
          font_size(2.4)

        &__content
          width 75%
          font_size(2.4)
          outline-style none
          border none
          border-radius 1em
          padding .5em .5em
          color $white
          color-scheme: dark
          text-align center
          resize none


  textarea
    height 6em
    outline-style none
    border none
    color $white
    color-scheme dark
    text-align center
    resize none
    scrollbar-width none

  button
    display flex
    align-items center
    padding .2em 1em
    font-size 1em